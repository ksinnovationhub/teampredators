<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Polima" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/polima_green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@null</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Polima">
        <item name="android:background">@drawable/bg_main</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MainButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetLeft">@dimen/no_space</item>
        <item name="android:insetTop">@dimen/no_space</item>
        <item name="android:insetBottom">@dimen/no_space</item>
        <item name="android:insetRight">@dimen/no_space</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.TextButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetLeft">@dimen/no_space</item>
        <item name="android:insetTop">@dimen/no_space</item>
        <item name="android:insetBottom">@dimen/no_space</item>
        <item name="android:insetRight">@dimen/no_space</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.TitleText">
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.OnBoardingText">
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/onboarding_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="lineHeight">38dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1.OtherText">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/no_account</item>
    </style>

    <style name="SubHeader" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/muli</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textLayoutBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/black</item>
        <item name="helperTextTextColor">@color/black</item>
    </style>

    <style name="textInputBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.CustomOutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">@dimen/no_space</item>
        <item name="android:insetTop">@dimen/no_space</item>
        <item name="android:insetBottom">@dimen/no_space</item>
        <item name="android:insetRight">@dimen/no_space</item>
    </style>

    <style name="Widget.Material3.CircularProgressIndicator.PolimaProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="indicatorSize">@dimen/progress_indicator_size</item>
        <item name="trackThickness">@dimen/progress_track_thickness</item>
    </style>

    <style name="SearchBar">
        <item name="fontFamily">@font/muli</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/medium_margin</item>
        <item name="android:background">@drawable/bg_search_bar</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.TitleText.itemDisplay1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.TitleText.itemDisplay1.itemDisplay2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="checkedIcon">@drawable/ic_done</item>
        <item name="chipStrokeColor">@color/polima_green</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
</resources>