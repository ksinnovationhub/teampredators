<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Polima" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/polima_green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@null</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Polima">
        <item name="android:background">@drawable/bg_main</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MaiButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetLeft">@dimen/no_space</item>
        <item name="android:insetTop">@dimen/no_space</item>
        <item name="android:insetBottom">@dimen/no_space</item>
        <item name="android:insetRight">@dimen/no_space</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.TextButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetLeft">@dimen/no_space</item>
        <item name="android:insetTop">@dimen/no_space</item>
        <item name="android:insetBottom">@dimen/no_space</item>
        <item name="android:insetRight">@dimen/no_space</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.TitleText">
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.OnBoardingText">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textColor">@color/onboarding_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="lineHeight">38dp</item>
    </style>
</resources>